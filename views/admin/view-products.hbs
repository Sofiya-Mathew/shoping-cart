<section>
    <div class="container">
        <div class="align-right">
            <a href="/admin/add-product" class="btn btn-success  mt-4 mb-3" type="button">Add Products</a>
        </div>
        <table class="table mt-4">
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col">Title</th>
      <th scope="col">Category</th>
      <th scope="col">Description</th>
      <th>image</th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
    <tr>
      <th scope="row">1</th>
      <td>{{this.name}}</td>
      <td>{{this.Category}}</td>
      <td>{{this.description}}</td>
      <td><img style="width: 50px;height:50px;" src="{{this.image}}" alt=""></td>
    </tr>
    {{/each}}
  </tbody>
</table>
    </div>
</section>